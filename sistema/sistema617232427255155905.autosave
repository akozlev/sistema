ParticleSystem[] ps = new ParticleSystem[10];
float a=-1, b=0;
int x=width/10, y= 0;

void setup() {
  size(640, 360);
  for  ( int i = 0; i < 9; i++)
  {
    ps[i]=new ParticleSystem(new PVector(x, y));
    x+=width/10;
  }
}

void draw() {
  background(0);
  
  if(a>=1) a=-1;
  if(b<=-2) b=0;
  
  for ( int i = 0; i<10; i++)
  {
      ps[i].addParticle(random(-1, 1),random(-2,0));
      ps[i].run();
  }
  
  a+=0.01;
  b-=0.01;
}
